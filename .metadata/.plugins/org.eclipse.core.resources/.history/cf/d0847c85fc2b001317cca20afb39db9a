});

var emailButton = Titanium.UI.createButton({
	color:'blue',
	value:'Click me to send an email',
	width:50,
	height:40,
	top:150,
	left:50
});

var file = Ti.Filesystem.getFile(Ti.Filesystem.resourcesDirectory, "textfile2.txt");
// 
